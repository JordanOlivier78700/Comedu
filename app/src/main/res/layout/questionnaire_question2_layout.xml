<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Salon"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Rencontres"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Banderole"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Flyer"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Internet, Facebook"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="245dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:text="Bouche à oreille"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_valider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_question5" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/checkBox7" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="183dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/checkBox8" />

    <CheckBox
        android:id="@+id/checkBox10"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox9" />

    <CheckBox
        android:id="@+id/checkBox11"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/checkBox10" />

    <CheckBox
        android:id="@+id/checkBox12"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginBottom="245dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_valider"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/checkBox11" />

    <TextView
        android:id="@+id/tv_question2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="300dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="200dp"
        android:text="Question n° 2:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_itescia"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginEnd="306dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/itescia" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comedu" />

    <Button
        android:id="@+id/bt_valider"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="8dp"
        android:onClick="click_jpo2continuer"
        android:text="Valider Sauvegarder"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_quitter" />

    <Button
        android:id="@+id/bt_quitter"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:text="Quitter"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_valider"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_question5"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="200dp"
        android:text="Comment avez vous été informé de ces portes ouvertes ?"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question2" />

</android.support.constraint.ConstraintLayout>